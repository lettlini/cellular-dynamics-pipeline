includeConfig 'common.config'

params {
    drop_first_n                 = 0
    drop_last_m                  = 75
    out_dir                      = "juergen/"
    in_dir                       = "monolayer/juergen/2018-08-13-10A-bulk-P16_S*"
    mum_per_px                   = 1.08122
    delta_t_minutes              = 10
    min_nucleus_area_mumsq       = 50
    stardist_probality_threshold = 0.479071
    cell_cutoff_mum              = 20
    lag_times_minutes            = "30,60,90,120,150,180,210,240"
    minimum_neighbors            = 2
    provider                     = "juergen"
}
process {
    time   = "5h"
    memory = "48GB"

    // CPU Requirements
    withLabel: high_cpu {
        cpus = 42
    }
    withLabel: low_cpu {
        cpus = 2
    }
    withLabel: single_threaded {
        cpus = 1
    }
    // Time Requirements
    withLabel: short_running {
        time = "1h"
    }
    withLabel: long_running {
        time = "10h"
    }
    // Memory Requirements
    withLabel: high_memory {
        memory = "64GB"
    }

    withName: nuclei_segmentation {
        maxRetries = 10
    }
}
