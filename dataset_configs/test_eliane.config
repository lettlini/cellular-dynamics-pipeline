includeConfig 'common.config'

params {
    drop_first_n                 = 50
    drop_last_m                  = 100
    out_dir                      = "monolayer/test_eliane/"
    in_dir                       = "monolayer/eliane/HeLa_CaSki/20211015_CaSki_s26_jamming"
    mum_per_px                   = 1.083
    delta_t_minutes              = 15
    min_nucleus_area_mumsq       = 100
    stardist_probality_threshold = 0.75
    cell_cutoff_mum              = 20
    lag_times_minutes            = "30,60,90,120"
    minimum_neighbors            = 2
    provider                     = "eliane"
}
// Local profile for running on a local machine
profiles {
    local {
        process {
            memory = "4GB"
            cpus   = 4

            withLabel: high_cpu {
                cpus = 12
            }

            withLabel: low_cpu {
                cpus = 2
            }
            withLabel: short_running {
                time = "5m"
            }
            withLabel: long_running {
                time = "2h"
            }
        }
    }

    // Cluster profile for running on HPC/cluster
    cluster {
        process {
            memory = "10GB"

            withLabel: high_cpu {
                cpus   = 24
                memory = "20GB"
            }
            withLabel: low_cpu {
                cpus = 4
            }
            withLabel: short_running {
                time = "5m"
            }
            withLabel: long_running {
                time = "30m"
            }
        }

        // Cluster-specific settings
        executor {
            name      = "slurm"
            queueSize = 100
        }
    }
}
