includeConfig 'common.config'

params {
    drop_first_n                 = 100
    drop_last_m                  = 300
    out_dir                      = "monolayer/test_juergen/"
    in_dir                       = "monolayer/juergen/18_08_03_10A_bulk_S6"
    mum_per_px                   = 1.08122
    delta_t_minutes              = 10
    min_nucleus_area_mumsq       = 50
    stardist_probality_threshold = 0.479071
    cell_cutoff_mum              = 20
    lag_times_minutes            = "30,60,90,120"
    minimum_neighbors            = 2
    provider                     = "juergen"
}
// Local profile for running on a local machine
profiles {
    local {
        process {
            memory = "4GB"
            cpus   = 4

            withLabel: high_cpu {
                cpus = 12.0
            }

            withLabel: low_cpu {
                cpus = 2
            }
            withLabel: short_running {
                time = "5m"
            }
            withLabel: long_running {
                time = "2h"
            }
        }
    }

    // Cluster profile for running on HPC/cluster
    cluster {
        process {
            memory = "16GB"

            withLabel: high_cpu {
                cpus   = 48
                memory = "64GB"
            }
            withLabel: low_cpu {
                cpus = 4
            }
            withLabel: short_running {
                time = "1h"
            }
            withLabel: long_running {
                time = "10h"
            }
        }

        // Cluster-specific settings
        executor {
            name      = "slurm"
            queueSize = 100
        }
    }
}
