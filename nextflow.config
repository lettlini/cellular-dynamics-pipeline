profiles {
    local {
        workDir = "/mnt/DATA/Nextflow/work"

        params {
            parent_indir = "/mnt/BACKUP/data/"
            parent_outdir = "/mnt/BACKUP/out/"
        }
        conda {
            enabled = true
            createTimeout = '1 h'
            useMamba = true
            // faster than conda
            // Path to your environment.yml
            cacheDir = "/mnt/DATA/nextflow-conda-cache"
        }

        process {
            executor = 'local'
            cpus = 1
            memory = "4 GB"
            conda = "${projectDir}/environment.yml"

            // High CPU processes
            withLabel: high_cpu {
                cpus = 10
            }
        }
    }
    cluster {
        workDir = "/work/kl63sahy-monolayer/nextflow-work"

        params {
            parent_indir = "/work/kl63sahy-monolayer/data/"
            parent_outdir = "/work/kl63sahy-monolayer/out/"
        }

        process {
            executor = "slurm"
            queue = "paul"
            memory = "12GB"
            cpus = 12
            beforeScript = """
                source /software/easybuild/el8/amd_zen1/all/Mamba/23.1.0-4/etc/profile.d/conda.sh
                module load Mamba
                conda activate cmot-pipeline
            """
            time = "18h"
            // High CPU processes
            withLabel: high_cpu {
                cpus = 32
            }
            withLabel: high_cpu {
                cpus = 1
            }
        }
    }
}
