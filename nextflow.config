profiles {
    local {
        workDir = "/mnt/DATA/Nextflow/work"

        params {
            parent_indir = "/mnt/BACKUP/data/"
            parent_outdir = "/mnt/BACKUP/data/out/"
        }

        process {
            executor = 'local'
            cpus = 1
            memory = "4 GB"

            // High CPU processes
            withLabel: high_cpu {
                cpus = 10
            }
        }
    }
    cluster {
        workDir = "/work/kl63sahy-monolayer/nextflow-work"

        params {
            parent_indir = "/work/kl63sahy-monolayer/data/"
            parent_outdir = "/work/kl63sahy-monolayer/out/"
        }
        conda {
            enabled = true
            createTimeout = '1 h'
            useMamba = true
            // faster than conda
            // Path to your environment.yml
            cacheDir = "/work/kl63sahy-monolayer/nextflow-conda-cache/"
        }

        process {
            executor = "slurm"
            queue = "paul"
            memory = "24GB"
            cpus = 12
            time = "18h"
            // High CPU processes
            withLabel: high_cpu {
                cpus = 32
            }
            conda = "${projectDir}/environment.yml"
        }
    }
}
